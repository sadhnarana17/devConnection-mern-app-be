{
    "compilerOptions": {
      "allowJs": true,
      "baseUrl": "./",
      "lib": ["es5", "es6", "es2019"],
      "target": "ES2020",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types", "./@types"],
      "resolveJsonModule": true
    },
    "paths": {
        "app/*": ["~"]
      },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "static/*"
    ]
}
  